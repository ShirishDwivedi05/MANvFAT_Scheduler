@model MANvFAT_Football.Models.ResetPasswordModel
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (Model.status)
{
    <div class="divMain">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.UserID)
            @Html.HiddenFor(m => m.status)
            <div class="text-danger col-sm-12" style="text-align:center;">
                @Html.ValidationSummary(true, "Reset Password was unsuccessful. Please correct the errors and try again.")
            </div>
            <section>
                <div class="container">

                    <div class="row">

                        <div class="col-md-6 col-md-offset-3 well">
                            <div class="box-static box-border-top margin-top-10 padding-30">
                                <div class="box-title margin-bottom-30">
                                    <h3>Reset Password</h3>
                                </div>
                                <br />
                                <form class="nomargin" method="post" action="#" autocomplete="off">
                                    <div class="clearfix">

                                        <!-- New Password -->
                                        <div class="form-group">
                                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control required", @placeholder = "New Password", @required = "" })
                                            <span class="text-danger">@Html.ValidationMessageFor(m => m.NewPassword)</span>
                                        </div>

                                        <!-- Confirm Password -->
                                        <div class="form-group">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control required", @placeholder = "Confirm Password", @required = "" })
                                            <span class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-8 col-sm-8 col-xs-8">
                                            <div class="form-tip">
                                                @if (Model.status == false)
                                                {
                                                    <div class="row text-center">
                                                        <div class="jumbotron">
                                                            <div class="alert alert-danger">
                                                                <h1>
                                                                    @Model.Message
                                                                </h1>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>

                                        <div class="col-md-4 col-sm-84 col-xs-84 text-right">
                                            <button class="btn btn-primary pull-right">Submit</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        }
    </div>

}
else {
    <text>
        <div class="row text-center">
            <div class="jumbotron">
                <div class="alert alert-danger">
                    <h1>
                        @Model.Message
                    </h1>
                </div>
                <h3>
                    <a href="/Account/Logon">Click here</a> to Login or Request to Reset Password
                </h3>
            </div>
        </div>

    </text>
}