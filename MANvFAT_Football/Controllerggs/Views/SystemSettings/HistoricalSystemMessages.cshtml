@model List<MANvFAT_Football.Models.Repositories.HistoricalSystemMessagesExt>
@{
    ViewBag.Title = "Historical System Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">

        <h2>Historical System Message</h2>
    </div>
    <div class="panel-body">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Message Date</th>
                    <th>Subject</th>
                    <th>Created By</th>
                    <th>Command</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <text>
                <tr>
                    <td>
                        @item.MessageDateTime.ToString("dd/MM/yyyy HH:mm")
                    </td>
                    <td>
                        @item.SystemMessageSubject
                    </td>
                    <td>
                        @item.CreatedByUserFullName
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" onclick="ShowMessage('@item.SystemMessageID')"><span class="glyphicon glyphicon-bullhorn"></span> Show Message</button>
                    </td>
                </tr>
                    </text>
                }
            </tbody>
        </table>

        @foreach (var item in Model)
        {
            <text>
                <div class="modal fade" id="Model_Message_@item.SystemMessageID" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <!-- Modal Header -->
                            <div class="modal-header bg-primary">
                                <button type="button" class="close"
                                        data-dismiss="modal">
                                    <span aria-hidden="true">&times;</span>
                                    <span class="sr-only">Close</span>
                                </button>
                                <h4>
                                    System Message
                                </h4>
                            </div>

                            <!-- Modal Body -->
                            <div class="modal-body">
                                <table class="table table-striped">
                                    <tr>
                                        <th>Subject</th>
                                        <td>@item.SystemMessageSubject</td>
                                    </tr>
                                   
                                </table>
                                <div>
                                    @Html.Raw(item.SystemMessage)
                                </div>
                            </div>


                            <!-- Modal Footer -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-warning" data-dismiss="modal"><span class="glyphicon glyphicon-remove-circle"></span> Close</button>
                            </div>
                        </div>
                    </div>
                </div>


            </text>
        }
    </div>
</div>



<script>

    //id = UserSystemMessageID
    function ShowMessage(id) {

        $("#Model_Message_"+id).modal('show');
    }
</script>

<style>
    .modal-header {
        border-top-left-radius: 6px;
        border-top-right-radius: 6px;
        -webkit-border-top-left-radius: 6px;
        -webkit-border-top-right-radius: 6px;
        -moz-border-radius-topleft: 6px;
        -moz-border-radius-topright: 6px;
    }
</style>