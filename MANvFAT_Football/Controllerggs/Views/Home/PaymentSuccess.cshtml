@model MANvFAT_Football.Models.Repositories.RegistrationExt

@{
    ViewBag.Title = "Payment Success";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}

<div class="MainContent">

    <div class="container-fluid">

        <div class="row">

            <div class="col-md-12">

                <div class="row black pay-now">

                    <div class="col-md-12">
                        <div class="center">

                            <h1><i class="fa fa-check-circle green-text" aria-hidden="true"></i></h1>

                            <h1>Congratulations!</h1>

                        </div>
                    </div>

                    <div class="col-md-4 col-md-offset-4 banner">

                        <p class="lead">
                            Your payment is complete and you have successfully registered for MAN v FAT Football.
                        </p>
                        <p class="lead">
                            Welcome to the team <span class="green-text">@Model.FullName</span>. There are three things to do next:
                        </p>

                        <dl>

                            <dt>
                              <h3 class="form-number-1">Check your email</h3>
                            </dt>
                            <dd>
                                We’ve sent you a welcome email to @Model.EmailAddress, it will answer all of your what happens next questions. If it's not there in 5 minutes, check your spam folder.
                            </dd>

                            <dt>
                                <h3 class="form-number-2">REFER A FRIEND AND GET CASH</h3>
                            </dt>
                            <dd>
                                Don’t play with yourself. In your welcome email there's a referral code. Share that code with your mates and across social media. Everyone who joins up with it gets 50% off their registration and you get a fiver for each new player. <a href="@Model.ReferralPageLink" target="_blank">Check out our referral scheme here</a>.
                            </dd>
                            <dt>
                                <h3 class="form-number-3">ENTER YOUR EMERGENCY CONTACTS</h3>
                            </dt>
                            <dd>
                                As agreed in your terms and conditions all players are required to provide a contact in case of illness or injury. Fill in the form below and hit Submit to enable us to finalise your registration
                                <p>If you have any more questions then <a target="_blank" href="http://bit.ly/MVFFFAQ">check out our comprehensive FAQ.</a></p>
                            </dd>

                        </dl>

                        <div class="col-lg-12">
                            <div class="alert alert-info text-center">
                                <p>Hi @Model.FullName, <br /> Please provide a contact name and number in the event of injury or illness. Please also provide details of any medication you take. </p>
                            </div>
                            @Html.HiddenFor(m => m.PlayerID)
                            @Html.HiddenFor(m => m.EmailAddress)
                            <div class="col-md-12">
                                <div class="well well-sm">
                                    <form class="form-horizontal">
                                        <fieldset>

                                            <div class="form-group">
                                                <span class="col-md-1 col-md-offset-1 text-center"><i class="fa fa-user bigicon"></i></span><span class="glyphicon glyphicon-asterisk text-danger" title="Emergency Contact Name Required"></span>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(m => m.Emergency_ContactName, new { @placeholder = "Who should we contact in case of an emergency?", @class = "form-control" })
                                                </div>

                                            </div>

                                            <div class="form-group">
                                                <span class="col-md-1 col-md-offset-1 text-center"><i class="fa fa-phone-square bigicon"></i></span><span class="glyphicon glyphicon-asterisk text-danger" title="Emergency Contact Phone Required"></span>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(m => m.Emergency_ContactPhone, new { @placeholder = "What is their phone number?", @class = "form-control" })
                                                </div>

                                            </div>

                                            <div class="form-group">
                                                <span class="col-md-1 col-md-offset-1 text-center"><i class="fa fa-medkit bigicon"></i></span>
                                                <div class="col-md-8">
                                                    @Html.TextAreaFor(m => m.Emergency_Medication, new { @placeholder = "Please provide details of any medication you take.", @class = "form-control", @rows = "7" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-12 text-center">
                                                    <button type="submit" class="btn btn-primary btn-lg" onclick="return UpdateEmergencyDetails();">Submit</button>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>

                        </div>
                        @Scripts.Render("~/bundles/EmergencyContactDetails-js")
                    </div>

                </div>

            </div>

        </div><!--/row -->

    </div>
</div><!--/MainContent -->
