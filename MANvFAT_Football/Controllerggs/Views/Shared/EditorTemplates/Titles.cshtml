
@(Html.Kendo().DropDownList()
                  .Name("TitleID")
              .HtmlAttributes(new { style = "width:100%" })
               .Filter(FilterType.Contains)
              .OptionLabel("-- Select --")
              .DataTextField("Title")
              .DataValueField("TitleID")
              .DataSource(source =>
              {
                  source.Read(read =>
                  {
                      read.Action("GetTitles", "DropDownLists");
                  });

              })
)
