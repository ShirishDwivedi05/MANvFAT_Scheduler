
@(Html.Kendo().DropDownList()
                  .Name("RoleID")
              .HtmlAttributes(new { style = "width:100%" })
               .Filter(FilterType.Contains)
              .OptionLabel("-- Select --")
              .DataTextField("Role")
              .DataValueField("RoleID")
              .DataSource(source =>
              {
                  source.Read(read =>
                  {
                      read.Action("GetRoles", "DropDownLists");
                  });

              })
)