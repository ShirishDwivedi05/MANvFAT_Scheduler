
@(Html.Kendo().DropDownList()
                  .Name("LeagueID")
              .HtmlAttributes(new { style = "width:100%" })
              .Filter(FilterType.Contains)
              .ValuePrimitive(true)
              .OptionLabel("-- Select --")
              .DataTextField("LeagueName")
              .DataValueField("LeagueID")
              .DataSource(source =>
              {
                  source.Read(read =>
                  {
                  read.Action("GetLeagues", "DropDownLists");
              });

})
)