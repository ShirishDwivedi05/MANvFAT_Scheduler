@model List<MANvFAT_Football.Models.Repositories.PlayersExt>



@foreach (var item in Model)
{
    string FullPlayerDefaultImagePath = MANvFAT_Football.Helpers.SecurityUtils.Players_ImagePath + "/" + item.PlayerID + "/" + item.PlayerDefaultImageFileName;
    <text>
    <div class="col-md-4">
        <div class="panel panel-default panel-featured">
            <div class="panel-heading">@item.FullName</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">

                        @if (string.IsNullOrEmpty(item.PlayerDefaultImageFileName))
                        {
                            <a href="/TeamPlayers/AllPlayers/@item.PlayerTeamID"><img src="~/Images/noimage.png" /></a>
                        }
                        else
                        {
                            <a href="/TeamPlayers/AllPlayers/@item.PlayerTeamID"><img src="@FullPlayerDefaultImagePath" /></a>
                        }


                     
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-hover tblFeaturePlayer">
                            <tr>
                                <th>Team</th>
                                <td>@item.PlayerTeamName</td>
                            </tr>
                            <tr>
                                <th>League</th>
                                <td>@item.PlayerLeagueName</td>
                            </tr>
                            <tr>
                                <th>Start Weight</th>
                                <td>@item.Weight kg</td>
                            </tr>
                            <tr>
                                <th>Latest Weight</th>
                                <td>@item.WeightVM kg</td>
                            </tr>
                            <tr>
                                <th>Height</th>
                                <td>@item.Height</td>
                            </tr>
                        </table>

                    </div>

                </div>
            </div>
        </div>
    </div>
</text>
}
