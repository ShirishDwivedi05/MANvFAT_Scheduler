
@(Html.Kendo().DropDownList()
                  .Name("LinkedPlayerID")
              .HtmlAttributes(new { style = "width:100%" })
              .Filter(FilterType.Contains)
              .OptionLabel("-- Select --")
              .DataTextField("FullName_Email")
              .DataValueField("PlayerID")
              .DataSource(source =>
              {
                  source.Read(read =>
                  {
                  read.Action("GetLinkPlayers", "DropDownLists", new { ParamMainPlayerID = (long)ViewBag.PlayerID });
              });

})
