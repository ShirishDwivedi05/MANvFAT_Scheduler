
@(Html.Kendo().DropDownList()
                  .Name("PaymentTypeID")
              .HtmlAttributes(new { style = "width:100%" })
               .Filter(FilterType.Contains)
              .OptionLabel("-- Select --")
              .DataTextField("PaymentType")
              .DataValueField("PaymentTypeID")
              .DataSource(source =>
              {
                  source.Read(read =>
                  {
                      read.Action("GetPaymentTypes", "DropDownLists");
                  });

              })
)