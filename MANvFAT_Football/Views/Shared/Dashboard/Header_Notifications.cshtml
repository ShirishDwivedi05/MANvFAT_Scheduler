@{    MANvFAT_Football.Models.Repositories.PlayerDashboardNotificationsRepository paRepo = new MANvFAT_Football.Models.Repositories.PlayerDashboardNotificationsRepository();
            var notifications = paRepo.ReadAll_NonDismissed(4); }
<div class="header-carousel">
    <div class="container">
        <div class="row">
            <div class="slider_bg slider_bg_Head">
                <div class="crose_btn">
                    <a href="#"><i class="fas fa-times pull-right"></i></a>
                </div>
                <div class="slide_banner">
                    <div class="col-lg-12">
                        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                @for (int count = 1; count < notifications.Count; count++)
                                {
                                    <li data-target="#myCarousel" data-slide-to="@count"></li>}
                                @*<li data-target="#myCarousel" data-slide-to="1"></li>*@
                            </ol>
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner text-center">
                                <div class="item active text-center">
                                    <div class="col-xs-12 col-sm-3">
                                        <img src="~/Content/ProgressDashbaord/images/banner_icon.png" class="banner_iconsize center-block img-responsive">
                                    </div>
                                    <div class="col-xs-12 col-sm-6">
                                        <h6>New Achievement</h6>
                                        <p>@notifications.FirstOrDefault().Title</p>
                                    </div>
                                    <div class="col-xs-12 col-sm-3">
                                        <div class="text-center">
                                            <a href="#" class="btn-default ">SHARE</a>
                                        </div>
                                    </div>
                                </div>
                                @foreach (var achievement in notifications.Skip(1))
                                {
                                    <div class="item text-center">
                                        <div class="col-xs-12 col-sm-3">
                                            <img src="~/Content/ProgressDashbaord/images/banner_icon.png" class="banner_iconsize center-block img-responsive">
                                        </div>
                                        <div class="col-xs-12 col-sm-6">
                                            <h6>New Achievement</h6>
                                            <p>
                                                @if (achievement.Title.Length > 25)
                                            {@achievement.Title.Substring(0, 25) }
                                            else
                                            { @achievement.Title}
                                        </p>
                                    </div>
                                    <div class="col-xs-12 col-sm-3">
                                        <div class="text-center">
                                            <a href="#" class="btn-default ">SHARE</a>
                                        </div>
                                    </div>
                                </div>
                                }
                                @*<div class="item text-center">
                                        <div class="col-xs-12 col-sm-3">
                                            <img src="~/Content/ProgressDashbaord/images/comment_banner.png" class="banner_iconsize center-block img-responsive">
                                        </div>
                                        <div class="col-xs-12 col-sm-6">
                                            <h6>New from community</h6>
                                            <p>healthy swaps</p>
                                        </div>
                                        <div class="col-xs-12 col-sm-3">
                                            <div class="text-center">
                                                <a href="#" class="btn-default ">discuss</a>
                                            </div>
                                        </div>
                                    </div>*@
                            </div>
                            <!-- Left and right controls -->
                            <a class="carousel-control-prev bnr_prev" href="#myCarousel" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon fas fa-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next bnr_next" href="#myCarousel" role="button" data-slide="next">
                                <span class="carousel-control-next-icon fas fa-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>